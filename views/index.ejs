<!-- Page content-->
<main id="site-main">
    <div class="container">
        <div class ="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class = "text-gradient">New User<i class="fas fa-user"></span>
            </a>
        </div>

        <!-- form handler -->
        <form action="/" method="POST">
            <table class="table">
                
                <thead class = "thread-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                
                <tbody>
                    <!-- hardcoded user example input -->
                    <%- include('include/_show') %>
                </tbody>

            </table>
        </form>
        <!-- /form handler -->

    </div>
</main>
<!-- /Page content-->

<!-- include footer-->
<%- include('include/_footer') %>
